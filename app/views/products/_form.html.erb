<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3 class="modal-title"><%= @modal_title%></h3>
    </div>
    <%= form_for @product, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">        
        <ul class="errors"></ul>
        <div class="form-group">
          <%= f.label :service, class:"control-label" %> : 
          <%= @service.name %>
        </div>
        <div class="form-group">
          <%= f.hidden_field :service_id, :value => @service.id, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :name, class:"control-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :platforms, class: "control-label" %>
          <%= f.text_field :platforms, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-success" %>
        <%= link_to "Cancel", "#", class: "btn btn-default", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
